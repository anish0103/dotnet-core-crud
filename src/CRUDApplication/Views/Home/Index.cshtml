@model List<Customer>;

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .homepage-maincontainer {
        display: flex;
        height: 100%;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .homepage-createcontainer {
        width: 90%;
        display: flex;
        justify-content: space-between;
        height: 80px;
        font-size: 20px;
        color: #bc8400;
        align-items: center
    }
    .homepage-createbutton {
        background-color: #bc8400;
        border: none;
        outline: none;
        padding: 8px 12px;
        color: white;
        border-radius: 8px;
        font-size: 16px;
        text-decoration: none;
    }
        .homepage-createbutton:hover {
            cursor: pointer;
        }
    .homepage-container {
        display: flex;
        width: 90%;
        flex-wrap: wrap;
        height: 100%;
        overflow-y: scroll;
    }
    .homepage-notext {
        width: 100%;
        height: 85%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        color: #6c8b92;
    }
    .homepage-maincontainer h1 {
        font-weight: 500;
    }
    .homepage-customercard {
        margin: 10px;
        width: 250px;
        height: 350px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
        border-radius: 8px;
        background-color: #0a323f;
        color: #6c8b92;
    }
        .homepage-customercard img {
            width: 130px;
            height: 130px;
            border-radius: 50%;
        }
        .homepage-customercard a {
            width: 75px;
            margin: 0px 3px;
            outline: none;
            padding: 8px 12px;
            border-radius: 5px;
            color: white;
            text-decoration: none;
            background-color: transparent;
        }
            .homepage-customercard a:hover {
                cursor: pointer;
            }
    .homepage-editbutton {
        border: 2px solid #bc8400;
    }
    .homepage-deletebutton {
        border: 2px solid #f56d6d;
    }
    .homepage-customercard p {
        width: 80%;
        text-align: center;
        word-wrap: break-word;
    }
</style>

<div class="homepage-maincontainer">
    <div class="homepage-createcontainer">
        Customer List
        <a class="homepage-createbutton" href="home/create">Create Customer</a>
    </div>
    <div class="homepage-container">
        @*<h1>HELLO FROM ASP.NET CORE</h1>*@
        @{
            if (Model.Count <= 0)
            {
                <p class="homepage-notext">No Customer to show. Click on create customer to create one.</p>
                return;
            }
        }
        @foreach (var customer in Model)
        {
            <div class="homepage-customercard">
                <img src="https://i.pinimg.com/originals/51/f6/fb/51f6fb256629fc755b8870c801092942.png" alt="User Picture" />
                <p>@customer.Name</p>
                <p>@customer.Email</p>
                <div>
                    <a href="/home/edit/@customer._id" class="homepage-editbutton">Edit</a>
                    <a href="/home/delete/@customer._id" class="homepage-deletebutton">Delete</a>
                </div>
            </div>
        }
    </div>
</div>